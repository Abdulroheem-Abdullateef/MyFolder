@{
    Layout = null;
}
@model IEnumerable<ApiProject.Dtos.HospitalDTO>



<div class="card-header" style="background-color:midnightblue;">
    <div class="card-title">
        <h1 class="text-center">Registered Hospitals</h1>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Id) *@
                S/N
            </th>

            <th>
                @* @Html.DisplayNameFor(model => model.Name) *@
                Name
            </th>

            <th>
                @* @Html.DisplayNameFor(model => model.Address) *@
                Address
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Hospitalmail) *@
                Email
            </th>
           
            <th>
                Details
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hospital in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => hospital.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => hospital.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => hospital.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => hospital.Hospitalmail)
            </td>          
           
            <td>
                <a asp-action="Details" asp-route-id="@hospital.Id">Details</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@hospital.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@model IEnumerable<ApiProject.Dtos.MedicalRecordDTO>

@{
    Layout = "DoctorLayOut";
}

<div class="card-header" style="background-color:midnightblue;">
    <div class="card-title">
        <h1 class="text-center">Assigned Cases</h1>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Id) *@
                S/N
            </th>

            <th>
                @* @Html.DisplayNameFor(model => model.FirstName) *@
                Patient Name
            </th>

            <th>
                @* @Html.DisplayNameFor(model => model.LastName) *@
                Complain
            </th>

            <th>
                Update
            </th>

    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => admin.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => admin.PatientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => admin.PatientComplain)
                </td>

                <td>
                    <button style="light-blue;">
                        <a asp-action="TreatedRefferedCases" asp-route-id="@admin.Id" asp-controller="MedicalRecord"
                        style="color: yellow;">Update Record</a>
                    </button>
                </td>

            </tr>
        }
    </tbody>
</table>

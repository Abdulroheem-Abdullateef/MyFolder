@{
    Layout = null;
}
@model IEnumerable<ApiProject.Dtos.RoleDTO>



<div class="card-header" style="background-color:midnightblue;">
    <div class="card-title">
        <h1 class="text-center">Roles</h1>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Id) *@
                S/N
            </th>

            <th>
                @* @Html.DisplayNameFor(model => model.FirstName) *@
                Name
            </th>

            <th>
                @* @Html.DisplayNameFor(model => model.LastName) *@
                Description
            </th>
           
            <th>
                Update
            </th>
            <th>
                Details
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patients in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => patients.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => patients.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => patients.Description)
            </td>
            
            <td>
                <a asp-action="Update" asp-route-id="@patients.Id">Update</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@patients.Id">Details</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@patients.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

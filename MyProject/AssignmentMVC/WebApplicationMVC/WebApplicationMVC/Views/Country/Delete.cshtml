@model WebApplicationMVC.DTO.CountryDto


<h3>Are you sure you want to delete this Country?</h3>
<div style="font-size: 130%;">
    <hr />
    <dl class="row">


        <dt class="col-sm-2">
            CountryName:
        </dt>
        <dd class="col-sm-10">
            @Model.CountryName
        </dd>

        <dt class="col-sm-2">
            Region:
        </dt>
        <dd class="col-sm-10">
            @Model.Region
        </dd>

        




    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger"/>
        <a asp-action="Index">Back to List</a>
    </form>
</div>
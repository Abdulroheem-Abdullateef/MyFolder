@model WebApplicationMVC.DTO.CreateCityDto


<div class="container">
    <div class="row justify-content-center">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:mediumblue">Create</h1>
                    <p class="tagcolor" style="color:mediumblue"> Form For City </p>
                    <hr class="tagcolor" style="color:mediumblue">

                </div>

                <form asp-action="Create">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
 
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="CityName" class="control-label"></label>
                            <input asp-for="CityName" class="form-control" />
                            <span asp-validation-for="CityName" class="text-danger"></span>
                        </div>

                        <div class="form-group col-sm-6">
                            <label asp-for="Population" class="control-label"></label>
                            <input asp-for="Population" class="form-control" />
                            <span asp-validation-for="Population" class="text-danger"></span>
                        </div>


                        <div class="form-group col-sm-6">
                            <label asp-for="CityCode" class="control-label"></label>
                            <input asp-for="CityCode" class="form-control" />
                            <span asp-validation-for="CityCode" class="text-danger"></span>
                        </div>

                        <div class="form-row">
                            <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                                <label class="control-label">Country</label>
                                <select asp-for="CountryId" class="form-control" asp-items="ViewBag.Country" required>
                                    <option value="">--Select Country--</option>
                                </select>
                            </div>

                        </div>

                       

                        <div class="form-group ">
                            <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                        </div>


                    </div>



              </form>        
                

            </div>
        </div>

    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


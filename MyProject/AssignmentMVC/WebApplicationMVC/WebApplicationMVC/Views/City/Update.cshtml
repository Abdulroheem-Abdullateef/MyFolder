@model WebApplicationMVC.DTO.UpdateCityDto





<div class="container">

    <div class="row justify-content-center">

        <div class=" card col-md-6">

            <div class="card-body ">

                <div class="bg-light">


                    <h1 class="tagcolor" style="color:mediumblue">City</h1>
                    <p class="tagcolor" style="color:mediumblue">Please fill in this form to Update your information.</p>
                    <hr class="tagcolor" style="color:mediumblue">

                </div>

                <form asp-action="Update">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-row">

                        <div class="form-group col-sm-6">
                            <label asp-for="CityCode" class="control-label"></label>
                            <input asp-for="CityCode" class="form-control" />
                            <span asp-validation-for="CityCode" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="CountryId" class="control-label"></label>
                            <input asp-for="CountryId" class="form-control" />
                            <span asp-validation-for="CountryId" class="text-danger"></span>
                        </div>

                        <div class="form-group col-sm-6">
                            <label asp-for="CityName" class="control-label"></label>
                            <input asp-for="CityName" class="form-control" />
                            <span asp-validation-for="CityName" class="text-danger"></span>
                        </div>

                        <div class="form-group col-sm-6">
                            <label asp-for="Population" class="control-label"></label>
                            <input asp-for="Population" class="form-control" />
                            <span asp-validation-for="Population" class="text-danger"></span>
                        </div>

                       




                        <div class="form-group ">
                            <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                        </div>



                    </div>

                </form>

            </div>

        </div>

    </div>

</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

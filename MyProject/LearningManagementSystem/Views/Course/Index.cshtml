
@model IEnumerable<LearningManagementSystem.DTOs.CourseDto>

@{
    Layout = "_InstructorLayout";
    ViewData["Title"] = "Instructor";
}



<div class="card-header" style="background-color:midnightblue;">
    <div class="card-title">
        <h1 class="text-center">Courses</h1>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>






            <th>
                Update
            </th>
            <th>
                Details
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => course.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => course.CourseName)
                </td>


                <td>
                    <a asp-action="Update" asp-route-id="@course.Id">Update</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@course.Id">Details</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@course.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<button style="background-color:wheat;"><a asp-controller="Course" asp-action="Create">Register Course</a> </button>


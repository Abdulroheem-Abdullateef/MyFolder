@model LearningManagementSystem.DTOs.InstructorDto

@{
    Layout = "_InstructorLayout";
    ViewData["Title"] = "Instructor";
}

<dl class="row">
    <dt class="com-sm-2">
        Instructor Name :
    </dt>

    <dd class="com-sm-10">
        @Model.FirstName
        @Model.LastName
    </dd>

    <dt class="com-sm-2">
        DepartmentName :
    </dt>

    <dd class="com-sm-10">
        @Model.DepartmentName
    </dd>

    <dt class="com-sm-2">
        CourseName :
    </dt>

    <dd class="com-sm-10">
        @Model.CourseName
    </dd>

    <dt class="com-sm-2">
        StudentNames :
    </dt>

    @foreach (var student in Model.Students)
    {
        <dd class="col-sm-10">
            @student.FirstName
        </dd>

        <dd class="col-sm-10">
            @student.LastName
        </dd>

        <dd class="col-sm-10">
            @student.Department
        </dd>

        <dd class="col-sm-10">
            @student.Gender
        </dd>

    }

</dl>


